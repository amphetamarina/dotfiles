startup_message off

exec /usr/bin/rpws init 7 -k

alias reload-config exec ratpoison -c "source $HOME/.ratpoisonrc"
alias lock-screen exec slock
alias open-browser exec firefox
alias open-terminal exec urxvt

set winname class

definekey top C-s-h exchangeleft
definekey top C-s-j exchangedown
definekey top C-s-k exchangeup
definekey top C-s-l exchangeright

bind l focusright
bind h focusleft
bind j focusdown
bind k focusup
bind f open-browser
bind c open-terminal
bind Escape lock-screen
bind r reload-config
bind C-1 exec rpws 1
bind C-2 exec rpws 2
bind C-3 exec rpws 3
bind C-4 exec rpws 4
bind C-5 exec rpws 5
bind C-6 exec rpws 6
bind C-0 exec rpws 7


